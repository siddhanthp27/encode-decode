#!/bin/bash

RANDOM=$$
for filename in *.txt
do
echo "${filename}"
x=$(($(($RANDOM%3))+1))
if [ $x == 1 ]
then
sed -s 's/N/`1/g
s/O/`2/g
s/P/`3/g
s/Q/`4/g
s/R/`5/g
s/S/`6/g
s/T/`7/g
s/U/`8/g
s/V/`9/g
s/W/`!/g
s/X/`@/g
s/Y/`#/g
s/Z/`$/g
s/A/N/g
s/B/O/g
s/C/P/g
s/D/Q/g
s/E/R/g
s/F/S/g
s/G/T/g
s/H/U/g
s/I/V/g
s/J/W/g
s/K/X/g
s/L/Y/g
s/M/Z/g
s/n/A/g
s/o/B/g
s/p/C/g
s/q/D/g
s/r/E/g
s/s/F/g
s/t/G/g
s/u/H/g
s/v/I/g
s/w/J/g
s/x/K/g
s/y/L/g
s/z/M/g
s/a/n/g
s/b/o/g
s/c/p/g
s/d/q/g
s/e/r/g
s/f/s/g
s/g/t/g
s/h/u/g
s/i/v/g
s/j/w/g
s/k/x/g
s/l/y/g
s/m/z/g' ${filename} >"${filename}.enc1"
fi
if [ $x == 2 ]
then
sed -s 's/Q/`1/g
s/R/`2/g
s/S/`3/g
s/T/`4/g
s/U/`5/g
s/V/`6/g
s/W/`7/g
s/X/`8/g
s/Y/`9/g
s/Z/`!/g
s/N/`@/g
s/O/`#/g
s/P/`$/g
s/C/Q/g
s/D/R/g
s/E/S/g
s/F/T/g
s/G/T/g
s/H/V/g
s/I/W/g
s/J/X/g
s/K/Y/g
s/L/Z/g
s/M/N/g
s/A/O/g
s/B/P/g
s/o/C/g
s/p/D/g
s/q/E/g
s/r/F/g
s/s/G/g
s/t/H/g
s/u/I/g
s/v/J/g
s/w/K/g
s/x/L/g
s/y/M/g
s/z/A/g
s/n/B/g
s/a/o/g
s/b/p/g
s/c/q/g
s/d/r/g
s/e/s/g
s/f/t/g
s/g/u/g
s/h/v/g
s/i/w/g
s/j/x/g
s/k/y/g
s/l/z/g
s/m/n/g'  ${filename} >"${filename}.enc2"
fi
if [ $x == 3 ]
then
sed -s 's/S/`5/g
s/T/`6/g
s/U/`7/g
s/V/`8/g
s/W/`9/g
s/X/`!/g
s/Y/`@/g
s/Z/`3/g
s/N/`4/g
s/O/`1/g
s/P/`2/g
s/Q/`3/g
s/R/`4/g
s/E/S/g
s/F/T/g
s/G/U/g
s/H/V/g
s/I/W/g
s/J/X/g
s/K/Y/g
s/L/Z/g
s/M/N/g
s/A/O/g
s/B/P/g
s/C/Q/g
s/D/R/g
s/v/E/g
s/w/F/g
s/x/G/g
s/y/H/g
s/z/I/g
s/n/J/g
s/o/K/g
s/p/L/g
s/q/M/g
s/r/A/g
s/s/B/g
s/t/C/g
s/u/D/g
s/a/v/g
s/b/w/g
s/c/x/g
s/d/y/g
s/e/z/g
s/f/n/g
s/g/o/g
s/h/p/g
s/i/q/g
s/j/r/g
s/k/s/g
s/l/t/g
s/m/u/g' ${filename} >"${filename}.enc3"
fi
